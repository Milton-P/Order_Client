<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/img_include_choosedish_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/d1"
                     />

                <TextView
                    android:id="@+id/txt_include_choosedish_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/img_include_choosedish_pic"
                    android:layout_marginTop="40dp"
                    android:background="@color/red"
                    android:gravity="right"
                    android:text="菜名"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/frontsize_small" />

                <TextView
                    android:id="@+id/txt_include_choosedish_info_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txt_include_choosedish_info_name"
                    android:layout_below="@+id/txt_include_choosedish_info_name"
                    android:background="@color/red"
                    android:text="价格"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/frontsize_small" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_info_introduction"
                    android:textColor="@color/black"
                    android:textSize="@dimen/frontsize_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_include_choosedish_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="菜品介绍信息"
                        android:textColor="@color/black"
                        android:textSize="@dimen/frontsize_small" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>